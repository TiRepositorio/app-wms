<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el codigo de la Mercaderia" />



                <EditText
                    android:id="@+id/etDestino"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="phone" />


                <EditText
                    android:id="@+id/etDesvioFocus"
                    android:layout_width="0sp"
                    android:layout_height="0sp" />

                <TextView
                    android:id="@+id/tvDescripcionTitulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion:" />

                <TextView
                    android:id="@+id/tvDescArticulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/border_bold"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvNorma"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold|italic" />

                    <!-- <TextView -->
                    <!-- android:id="@+id/tvNormaArticulo" -->
                    <!-- android:layout_width="fill_parent" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:gravity="center_horizontal" -->
                    <!-- android:text="1X1" -->
                    <!-- android:textColor="#000000" -->
                    <!-- android:textSize="18dp" -->
                    <!-- android:textStyle="bold|italic" -->
                    <!-- android:layout_margin="2dp"/> -->
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Unidad de Medida" />

                <Spinner
                    android:id="@+id/spDirecciones"
                    style="@android:style/Widget.Holo.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:padding="0dp"
                    android:background="@drawable/spinner_normal"
                    android:spinnerMode="dropdown"
                    android:textSize="7pt" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="AnomalÃ­as " />

                <Spinner
                    android:id="@+id/spAnomalias"
                    style="@android:style/Widget.Holo.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/spinner_normal"
                    android:spinnerMode="dropdown"
                    android:textSize="7pt" />

                <TextView
                    android:id="@+id/tvDeposito"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Deposito" />

                <Spinner
                    android:id="@+id/spDeposito"
                    style="@android:style/Widget.Holo.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/spinner_normal"
                    android:spinnerMode="dropdown"
                    android:textSize="7pt" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrese la cantidad" />

                <EditText
                    android:id="@+id/etCantidad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number" />

                <!-- <TextView -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:text="Lote" /> -->


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el lote" />

                <EditText
                    android:id="@+id/etLote"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Vencimiento" />

                <EditText
                    android:id="@+id/etVencimiento"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/tvFabricacion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Fabricacion" />

                <EditText
                    android:id="@+id/etFabricacion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Almacenamiento" />

                <Spinner
                    android:id="@+id/spTipoAlmacenamiento"
                    style="@android:style/Widget.Holo.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:padding="0dp"
                    android:background="@drawable/spinner_normal"
                    android:spinnerMode="dropdown"
                    android:textSize="7pt" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conferir Articulo" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>