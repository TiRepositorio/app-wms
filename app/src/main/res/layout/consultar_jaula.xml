<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="fill_parent"
                android:gravity="right" >

                <TextView
                    android:id="@+id/tvTitulo1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="Jaula: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitulo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />
            </TableRow>

            <EditText
                android:id="@+id/etPlanilla"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:ems="5"
                android:focusableInTouchMode="true"
                android:hint="Planilla"
                android:inputType="phone"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etCodigoBarra"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:ems="5"
                android:hint="CÃ³digo de Barra"
                android:inputType="phone"
                android:singleLine="true" />

            <EditText
                android:id="@+id/etDesvioFocus"
                android:layout_width="0sp"
                android:layout_height="0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/border_bold"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvDatos1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDatos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tvDatos3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </TableLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tvPlanilla"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#008000"
                        android:text="Planilla"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:width="175dp" />

                    <TextView
                        android:id="@+id/tvCodVolumen"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="#008000"
                        android:text="Cod. Volumen"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:width="175dp" />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="#008000"
                        android:text="Estado"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:width="175dp" />

                    <TextView
                        android:id="@+id/tvNroVolumen"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="#008000"
                        android:text="Nro. Volumen"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:width="105dp" />

                    <TextView
                        android:id="@+id/tvCliente"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="#008000"
                        android:text="Cliente"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:width="105dp" />
                </TableRow>

                ListView
                    android:id="@+id/lvListaFraccionado"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvListaFraccionado"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>


            </TableLayout>
        </HorizontalScrollView>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:includeFontPadding="true"
                android:text="Cancelar" />
        </TableRow>

    </LinearLayout>
</RelativeLayout>