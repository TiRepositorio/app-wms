<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de barras"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etVolumen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ems="10"
            android:inputType="number"
            android:hint="Volumen" >

            <requestFocus />
        </EditText>

        <TableRow
            android:id="@+id/tableRow1"
            android:background="#008000"
            android:layout_width="match_parent"
            android:layout_height="10dp" >
        </TableRow>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvCodigoVolumen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Código:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvCodigoVolumenBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <TableRow
                    android:id="@+id/TableRow05"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvJaula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaula:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvJaulaBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <TableRow
                    android:id="@+id/TableRow03"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvNroVolumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nro. de Volumen:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvNroVolumenBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <TableRow
                    android:id="@+id/TableRow04"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvPlanilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nro. de Planilla:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvPlanillaBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <TableRow
                    android:id="@+id/TableRow02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de registro de planilla:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvFechaBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <TableRow
                    android:id="@+id/TableRow06"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuario:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvUsuarioBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />

                <TableRow
                    android:id="@+id/TableRow07"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado:"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/cbEstadoS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="S" />

                    <CheckBox
                        android:id="@+id/cbEstadoN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:clickable="false"
                        android:text="N" />
                </LinearLayout>

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" >
                </TableRow>

                <TextView
                    android:id="@+id/tvCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente:"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvClienteBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp" />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">>" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Buscar  " />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar " />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>