<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/back_dialog" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTituloRelacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:gravity="center|center_vertical"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTituloDireccion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"
                    android:text="DIRECCIÓN DESTINO 1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDirDestino"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"
                    android:text="000-000-000"/>
<!--                <Spinner-->
<!--                    android:id="@+id/tvDirDestino"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="fill_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@color/white"-->
<!--                    android:textColor="#000"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:spinnerMode="dropdown"-->
<!--                    />-->
                <TextView
                    android:id="@+id/tvCant1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:gravity="center|center_vertical"
                    android:text="0"/>


            </LinearLayout>

            <!--          	<Button  -->
            <!-- 	      	    android:id="@+id/btn_volver" -->
            <!-- 	      	    android:layout_width="40sp" -->
            <!-- 	      	    android:layout_height="30sp"  -->
            <!-- 	      	    android:background="@color/translucent_red" -->
            <!-- 	      	    android:text="X"  -->
            <!-- 	      	    /> -->

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:adjustViewBounds="false"
            android:scaleX="2"
            android:scaleY="1"
            android:src="@drawable/codigologobar" />

        <EditText
            android:id="@+id/etCodBarraDir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:hint="Ingresar Destino 1"
            android:inputType="phone"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <EditText
            android:id="@+id/etDesvioFocusDir"
            android:layout_width="0sp"
            android:layout_height="0sp" />









        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitulo2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"
                    android:text="DIRECCIÓN DEL SALDO"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDirDestino2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center|center_vertical"
                    android:text="000-000-000"/>
                <TextView
                    android:id="@+id/tvCant2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:gravity="center|center_vertical"
                    android:text="0"/>
            </LinearLayout>

        </LinearLayout>





        <EditText
            android:id="@+id/etCodBarraDir2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:hint="Ingresar Destino 2"
            android:inputType="phone"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <EditText
            android:id="@+id/etDesvioFocusDir2"
            android:layout_width="0sp"
            android:layout_height="0sp" />






        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnConfirmarList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Confirmar" />
            <Button
                android:id="@+id/btnCancelarList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>
