<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border_bold"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etCodigoBarraLDPI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <EditText
            android:id="@+id/etDesvioFocusLDPI"
            android:layout_width="0sp"
            android:layout_height="0sp" />








        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="2dip"
            android:layout_weight="1"
            android:clipToPadding="true"
            android:overScrollMode="never" >

            <TableLayout
                android:id="@+id/amortization"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableRow android:background="#008000" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|center_vertical"
                        android:maxLines="1"
                        android:scrollbars="horizontal"
                        android:text="Dirección"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:width="100sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|center_vertical"
                        android:maxLines="1"
                        android:scrollbars="horizontal"
                        android:text="Articulo"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:width="90sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|center_vertical"
                        android:maxLines="1"
                        android:scrollbars="horizontal"
                        android:text="Descripción"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:width="300sp" />


                </TableRow>

                ListView
                    android:id="@+id/lvTransferenciasLDPI"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:paddingTop="1dip"
                    android:scrollbars="none" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransferenciasLDPI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>

            </TableLayout>
        </HorizontalScrollView>

        <!--         <EditText -->
        <!--             android:id="@+id/etCodigoBarra" -->
        <!--             android:layout_width="fill_parent" -->
        <!--             android:layout_height="wrap_content" -->
        <!--             android:inputType="phone"    		 -->
        <!--   			android:descendantFocusability="blocksDescendants" -->
        <!--             android:focusable="true" -->
        <!--             android:focusableInTouchMode="true" /> -->



        <!--         <requestFocus /> -->



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnCancelarLDPI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>